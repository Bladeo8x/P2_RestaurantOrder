    <h1 class="title">SNACKS</h1>
    <div>
      <div class="d-flex justify-content-center flex-wrap">
        {{#each snacks}}
        {{> product-card}}
        {{/each}}
      </div>
    </div>
  </div>

{{!-- Desserts Tab --}}
    <div id="thirdPage" class="section" style="background: #F28705">
    <h1 class="title">DESSERTS</h1>
