        {{#each drinks}}
        {{> product-card}}
        {{/each}}
      </div>
    </div>
  </div>


</div>




{{!-- Modal Cart --}}
<div class="modal fade" id="modalCart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">
            <i class="fa-solid fa-cart-shopping"></i> Cart
          </h5>
          <button onclick="hideCart()" type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i class="fa-solid fa-rectangle-xmark"></i>
          </button>
        </div>
        <div class="modal-body">
          <!-- Shopping Cart Items Container -->
          <section class="container container-section">
            <h2 class="section-header">BASKET</h2>
            <div class="cart-row">
              <span class="cart-item cart-header cart-column">ITEM</span>
              <span class="cart-price cart-header cart-column">PRICE</span>
              <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>

            <div class="cart-items">
              <!-- Cart Items HolderBox Div -->
              

            </div>
            <div class="cart-total">
              <strong class="cart-total-title">TOTAL</strong>
              <span class="cart-total-price">$ 0.00</span>
            </div>
            <button class="btn btn-primary btn-purchase mt-auto mb-2 py-2" role="button">Pay Order</button>
        </div>
        </section>
      </div>
    </div>
  </div>
  </div>